<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/spnImagenes"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:entries="@array/imagenes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgFoto"
        android:layout_width="343dp"
        android:layout_height="320dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.325"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:srcCompat="@drawable/ic_launcher_background" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="123dp"
        android:layout_height="141dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnImagenes">

        <RadioButton
            android:id="@+id/rbtimagen3"
            android:layout_width="127dp"
            android:layout_height="33dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="1dp"
            android:onClick="cambiarImgRBT"
            android:text="imagen 1" />

        <RadioButton
            android:id="@+id/rbtimagen1"
            android:layout_width="123dp"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="8dp"
            android:onClick="cambiarImgRBT"
            android:text="imagen 2" />

        <RadioButton
            android:id="@+id/rbtimagen2"
            android:layout_width="126dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:onClick="cambiarImgRBT"
            android:text="imagen 3" />
    </RadioGroup>

    <CheckBox
        android:id="@+id/check1"
        android:layout_width="117dp"
        android:layout_height="38dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="8dp"
        android:onClick="cambiarCheck"
        android:text="imagen 1"
        app:layout_constraintBottom_toTopOf="@+id/check2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/radioGroup"
        app:layout_constraintTop_toBottomOf="@+id/spnImagenes" />

    <CheckBox
        android:id="@+id/check2"
        android:layout_width="121dp"
        android:layout_height="39dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        android:onClick="cambiarCheck"
        android:text="imagen 2 "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/radioGroup"
        app:layout_constraintTop_toBottomOf="@+id/check1" />

    <CheckBox
        android:id="@+id/check3"
        android:layout_width="119dp"
        android:layout_height="38dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="75dp"
        android:onClick="cambiarCheck"
        android:text="imagen 3"
        app:layout_constraintBottom_toTopOf="@+id/imgFoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/radioGroup"
        app:layout_constraintTop_toBottomOf="@+id/check2" />

</androidx.constraintlayout.widget.ConstraintLayout>